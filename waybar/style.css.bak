* {
  font-family:'Monospace','tabler-icons';
  padding-left: 3px;
  padding-right: 3px;
}

window#waybar {
  background: transparent;
  color: #dcd7ba;
}

tooltip {
  background: #1f1f28;
  border-radius: 15px;
  border-width: 2px;
  border-style: solid;
  border-color: #7e9cd8;
  font-size: 13pt;
}

tooltip label {
  padding: 7px;
}

#workspaces {
  background: #16161d;
  font-size: 18pt;
  padding-top: 20px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  padding-bottom: 10px;
}

#workspaces button {
  color: #ffffff;
  padding-top: 10px;
  padding-bottom: 10px;
}

#workspaces button.focused {
  color: #7e9cd8;
}

#workspaces button.active {
  color: #7e9cd8;
}

#workspaces button.urgent {
    color: #e6c384;
}

#workspaces button:hover {
    background: #1f1f28;
    border-color: #1f1f28;
	color: #bbbbbb;
}

#custom-spotify {
  background: #16161d;
  color: #ffffff;
  padding-bottom: 20px;
  font-size: 18pt;
  border-radius: 0px;
}

#network, #pulseaudio, #pulseaudio.percentage, #battery, #battery.percentage, #custom-vpn, #custom-calendar-icon, #clock, #clock.date, #custom-time-icon, #clock.time {
  background: #1f1f28;
  border-radius: 0px;
}

#network {
  padding-top: 20px;
  padding-bottom: 10px;
  font-size: 18pt;
  color: #ffffff;
}

#pulseaudio {
  padding-top: 10px;
  color: #ffffff;
  font-size: 18pt;
}

#pulseaudio.percentage {
  font-size: 13pt;
  padding-top: 10px;
  padding-bottom: 10px;
  color: #ffffff;
}

#battery {
  padding-top: 10px;
  font-size: 18pt;
  color: #ffffff;
}

#battery.percentage {
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 13pt;
  color: #ffffff;
}

#custom-vpn {
  padding-top: 10px;
  padding-bottom: 10px;
  color: #ffffff;
  font-size: 18pt;
}

#custom-calendar-icon {
  padding-top: 10px;
  font-size: 18pt;
  color: #ffffff;
}

#clock {
  padding-top: 10px;
  font-size: 13pt;
  color: #ffffff;
}

#clock.date {
  padding-top: 1px;
  font-size: 13pt;
  padding-bottom: 10px;
  color: #ffffff;
}

#custom-time-icon {
  padding-top: 10px;
  font-size: 18pt;
  color: #ffffff;
}

#clock.time {
  padding-top: 10px;
  padding-bottom: 20px;
  font-size: 13pt;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  color: #ffffff;
}
